set -ex

pkg=lxc-4.0.3
cwd=$PWD
src=$cwd/lxc-4.0.3

tar -xzvf $pkg.tar.gz

cd $src

cat $cwd/series.conf | while read line
do
    if [[ $line == '' || $line =~ ^\s*# ]]; then
        continue
    fi
    echo $cwd/$line
    patch -p1 -F1 -s < $cwd/$line
done

cd $cwd
